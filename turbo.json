{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"],
      "env": [
        "DATABASE_URL",
        "ADMIN_TOKEN",
        "MOONSHOT_API_KEY",
        "MOONSHOT_MODEL",
        "HELIUS_API_KEY",
        "HELIUS_RPC_URL",
        "GITHUB_TOKEN",
        "DEMO_MODE"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {}
  }
}
